<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.n3twork.ddcharacters.Fragments.StatsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleNivelesConjuros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp">


            <EditText
                android:id="@+id/editTextConjurosConoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:gravity="center"
                android:hint="C. conj"
                android:inputType="numberSigned"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="#000000"
                android:textSize="15sp"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/editTextCDSalvacion"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:hint="CD salv"
                android:inputType="numberSigned"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="#000000"
                android:visibility="invisible"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/editTextDiarios"
                android:layout_width="0dp"
                android:gravity="center"
                android:hint="Diarios"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:inputType="numberSigned"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="#000000"
                android:visibility="invisible"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/editTextAdicionales"
                android:layout_width="0dp"
                android:gravity="center"
                android:hint="Adic"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:inputType="numberSigned"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>