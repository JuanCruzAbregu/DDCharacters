<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.n3twork.ddcharacters.Fragments.SkillsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleBotonesSueltosSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/buttonModificarSueltosSkill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="PTS HABILIDAD RESTANTES"
                android:backgroundTint="@color/colorButtons"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPuntosSkill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:inputType="textCapWords"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>